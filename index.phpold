<script>
    // Adjust the position of the sticky sidebar dynamically
    window.addEventListener('scroll', function() {
        var stickySidebar = document.getElementById('stickySidebar');
        var sidebarTop = stickySidebar.getBoundingClientRect().top;

        if (sidebarTop <= 20) {
            stickySidebar.style.top = (20 - sidebarTop) + 'px';
        } else {
            stickySidebar.style.top = '20px';
        }
    });
</script>
