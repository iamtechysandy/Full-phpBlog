            if (mysqli_num_rows($result) > 0) {
                // Output data of each row
                $firstPost = true;
                while ($row = mysqli_fetch_assoc($result)) {
                    // Display posts
                    echo '<div class="card mb-3">';
                    if ($firstPost) {
                        // Show the first post in full
                        echo '<img src="' . $row["image"] . '" class="card-img-top" alt="...">';
                        echo '<div class="card-body">';
                        echo '<h5 class="card-title">' . $row["title"] . '</h5>';
                        echo '<p class="card-text">' . $row["content"] . '</p>';
                        echo '</div>';
                        $firstPost = false;
                    } else {
                        // Show other posts with a maximum of 10 words and no image if there are none
                        echo '<div class="card-body">';
                        echo '<h5 class="card-title">' . $row["title"] . '</h5>';
                        echo '<p class="card-text">';
                        $contentWords = explode(' ', $row["content"]);
                        echo implode(' ', array_slice($contentWords, 0, 10)) . '...';
                        echo '</p>';
                        echo '</div>';
                    }
                    echo '</div>';
                }
            } else {
                echo "0 results";
            }

